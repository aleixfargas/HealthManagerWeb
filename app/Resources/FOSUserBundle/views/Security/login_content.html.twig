{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    <div class="col-md-6">
        <div class="login-mail">            
{#            <label for="username">{{ 'security.login.username'|trans }}</label>#}
{#            <input type="text" id="username" name="_username" value="{{ last_username }} " placeholder="{{ 'security.login.username'|trans }}" required="required" />#}
            <input type="text" id="username" name="_username" placeholder="{{ 'security.login.username'|trans }}" required="required" />
            <!-- <i class="fa fa-envelope"></i> -->
            <i class="my-login-user-icon glyphicon glyphicon-user"></i>
        </div>
        <div class="login-mail">
{#            <label for="password">{{ 'security.login.password'|trans }}</label>#}
            <input type="password" id="password" name="_password" placeholder="{{ 'login.password_form_input'|trans({}, 'login') }}" required="required" />
            <i class="fa fa-lock"></i>
        </div>
        <a class="news-letter " href="#">
            <label class="checkbox1"><input type="checkbox" id="remember_me" name="_remember_me" value="on" /><i> </i>{{ 'security.login.remember_me'|trans }}</label>
        </a>
    </div>
    <div class="col-md-6 login-do">
        {#<div class="login-type login-mail">
            <select id="usertype" class="login-selector" type="text" placeholder="{{ 'login.userType_form_input'|trans({}, 'login') }}" required="">
                <option value=""></option>
                {% for user_type in user_types -%}
                    <option value="{{ user_type.id }}"> {{ user_type.type }}</option>
                {%- endfor %}
            </select>
            <i class="glyphicon glyphicon-tags"></i>
        </div>#}
        <label class="hvr-shutter-in-horizontal login-sub">
            <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
{#            <input type="submit" value="{{ 'login.login_form_button'|trans({}, 'login') }}">#}
        </label>
    </div>
    <div class="clearfix"></div>
</form>