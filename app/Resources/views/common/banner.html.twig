{% block banner %}
    {% if is_section is defined %}
        <!--banner-->	
        <div class="banner">
            <h2>
                <a href="{{ path('homepage') }}">{{ 'base.global_section_home'|trans({}, 'base') }}</a>
                {% for section in sections -%}
                    <i class="fa fa-angle-right"></i>
                    <a href="{{ section.url }}"><span> {{ section.name }} </span></a>
                {%- endfor %}
            </h2>
        </div>
        <!--//banner-->
    {% endif %}
{% endblock %}
