{% extends 'base_menu.html.twig' %}

{% block content_main %}
    <div class="typo-grid">
        <form id="form_edit_visits" url="{{ url('visits-save-edit') }}" type="post">
            <div class="typo-1">
                <div class="grid_3 grid_4">
                    <div class="mail-toolbar">
                        <div class="float-left">
                            <h2>Visit Form</h2>
                        </div>
                        <div class="float-right">
                            <div class="btn-group">
                                <button type="submit" class="btn btn-success">Edit</button>
                            </div>
                            <div class="btn-group">
                                <a href="{{ url('visits-show', {'visit_id': visit.id}) }}" type="button" class="btn btn-default">Cancel</a>
                            </div>
                        </div>
                    </div>
                </div>
                {% set edit = true %}
                {% include 'visits/form_visits.html.twig' %}
            </div>
        </form>
    </div>
{% endblock %}

{% block stylesheets %}  
    <link rel="stylesheet" type="text/css" href="{{ asset('css/edit_visits.css', 'visits') }}" />
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('js/edit_visits.js', 'visits') }}"></script>
{% endblock %}
