{% extends 'base_menu.html.twig' %}

{% block content_main %}
    <div class="typo-grid">
        <div class="typo-1">
            <div class="grid_3 grid_4">
                <!--visits_toolbar-->
                <div class="mail-toolbar clearfix">
                    <div class="float-left">
                        <div class="btn-group m-r-sm mail-hidden-options" style="display: inline-block;">
                            <!--AddNew Visit-->
                            <div class="btn-group">
{#                                <button type="button" class="btn btn-default" data-toggle="modal" data-target="#visit_addnew_modal"><i class="fa fa-user-plus text-color-green"></i> Add New Patient</button>#}
                                <a href="{{ url('visits-new') }}" class="btn btn-default"><i class="fa fa-calendar-check-o text-color-green"></i> Add New Visit</a>
                            </div>
                            <!--/AddNew Visit-->
                        </div>
                    </div>
                    
                    {% if visits_list|length > 0 %}
                    <div class="float-right">
                        <div class="btn-group">
                            <div class="btn-group dropdown">
                                <a href="#" title="" class="btn btn-default" data-toggle="dropdown" aria-expanded="false">
                                    <i class="fa fa-cog icon_8"></i>
                                    <i class="fa fa-chevron-down icon_8"></i>
                                    <div class="ripple-wrapper"></div>
                                </a>
                                <ul class="dropdown-menu my-dropdown-right float-right">
                                    {#
                                    <li>
                                        <a href="#" title="">
                                            <i class="fa fa-download icon_9"></i>
                                            Download
                                        </a>
                                    </li>
                                    #}
                                    <li>
                                        <a id="delete_visits" class="font-red" title="">
                                            <i class="fa fa-times" icon_9=""></i>
                                            Delete
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    {% endif %}                    
                </div>
                <div class="mail-toolbar clearfix">
{#                <div class="col-sm-12 col-md-12">#}
                    <div class="col-xs-12 col-sm-12 col-md-12">
                        <div class="col-md-6">
                            <div id="datetimepicker_visits"></div>
                        </div>
                    </div>
                </div>
                <!--/visits_toolbar-->

                <!--visits_gallery-->
                <div class="float-right">
                    {# Day-to-day picker #}
                    <button id="go_previous" url="{{ url('visits-list', {'day': list_date|date_modify("-1 day")|date("Y-m-d")}) }}" class="btn btn-default"><i class="fa fa-arrow-circle-left"></i></button>
                    <button id="go_today" url="{{ url('visits-list', {'day': "now"|date("Y-m-d")}) }}" class="btn btn-default">Today</button>
                    <button id="go_next" url="{{ url('visits-list', {'day': list_date|date_modify("+1 day")|date("Y-m-d")}) }}" class="btn btn-default"><i class="fa fa-arrow-circle-right"></i></button>
                </div>
                <div class="float-left">
                <h3>{{ list_date|localizeddate('full', 'none', app.request.locale) }}</h3>
                <input id="current_day" value="{{ list_date }}" hidden />
                <p>{{ visits_list|length }} visits</p>
                </div>
                <table id="visits-table" class="my-table table">
                    {% if visits_list|length > 0  %}
                        <thead>
                            <tr class="check_visit hidden">
                                <th colspan="3" data-field="state" data-checkbox="true" class="cursor-pointer">
                                    <p id="check_all_visits"><input name="btSelectAll" type="checkbox"> Check/Uncheck All</p>
                                </th>
                                <th>
                                    <div class="btn-group-sm pull-right">
                                        <button id="delete_visits_btn" class="btn btn-danger">Delete</button>
                                        <button id="cancel_delete_visits_btn" class="btn btn-default">Cancel</button>
                                    </div>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            {% set i = 0 %}
                            {% for visit in visits_list %}
                                <tr url=" {{ url('visits-show', {'visit_id': visit.id}) }} " class="table-row visit" data-index="{{ visit.id }}" class="table-row patient">
                                    <td class="bs-checkbox check_visit hidden">
                                        <input name="btSelectItem" type="checkbox">
                                    </td>
                                    <td class="table-text col-md-3">
                                        {{ visit.visitDate|date("d/m/Y H:i:s", "Europe/Madrid") }}
                                    </td>
                                    <td class="table-text">
                                        <div class="float-left">
                                            <a>{{ visits_patients_name[i] }}</a>
                                        </div>
                                    </td>
                                    <td class="table-text">
                                        {{ visit.reason }}
                                    </td>
                                </tr>
                                {% set i = i + 1 %}
                            {% endfor %}
                        </tbody>
                    {% else %}
                        <tbody>
                            <tr class="table-row">
                                <td class="table-text">
                                    <center>No visit found</center>
                                </td>
                            </tr>
                        </tbody>
                    {% endif %}
                </table>
                <!--/visits_gallery-->
{#                {% include 'common/paginator.html.twig' %}#}
                <div class="clearfix"> </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}  
    <link rel="stylesheet" type="text/css" href="{{ asset('css/visits.css', 'visits') }}" />
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('js/visits.js', 'visits') }}"></script>
{% endblock %}
