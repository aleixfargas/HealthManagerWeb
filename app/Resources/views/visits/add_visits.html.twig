{% extends 'base_menu.html.twig' %}

{% block content_main %}
    <div class="typo-grid">
        <form id="form_new_visits" url="{{ url('visits-save') }}" type="post">
            <div class="typo-1">
                <div class="grid_3 grid_4">
                    <div class="mail-toolbar">
                        <div class="float-right">
                            <div class="btn-group">
                                <button type="submit" class="btn btn-success">{{ 'base.section_add_new_button'|trans({}, 'base') }}</button>
                            </div>
                            <div class="btn-group">
                                <a href="{{ url('visits-list') }}" type="button" class="btn btn-default">{{ 'base.section_cancel_button'|trans({}, 'base') }}</a>
                            </div>
                        </div>
                        <div class="float-left">
                            <h2>{{ 'visits.section_visit_add_form'|trans({}, 'visits') }}</h2>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
                {% include 'visits/form_visits.html.twig' %}
            </div>
        </form>
    </div>
{% endblock %}

{% block stylesheets %}  
    <link rel="stylesheet" type="text/css" href="{{ asset('css/add_visits.css', 'visits') }}" />
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('js/add_visits.js', 'visits') }}"></script>
{% endblock %}
