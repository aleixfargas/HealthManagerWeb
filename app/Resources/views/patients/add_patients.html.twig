{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block add_patients %}
    <!--Modal add_patients-->
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add New Patient</h4>
            </div>
            {{ form_start(form) }}
            <div class="modal-body">
                {#<div>
                    <label for="form_dni">Dni</label>
                    <ul>
                        <li>This field is required</li>
                    </ul>
                    <input type="text" id="form_dni" name="form[dni]" />
                </div>
                <div>
                    <label for="form_name">Name</label>
                    <ul>
                        <li>This field is required</li>
                    </ul>
                    <input type="text" id="form_name" name="form[name]" />
                </div>
                <div>
                    <label for="form_surname">Surname</label>
                    <ul>
                        <li>This field is required</li>
                    </ul>
                    <input type="text" id="form_surname" name="form[surname]" />
                </div>#}
                
                {{ form_widget(form) }}
            </div>
            <div class="modal-footer">
                <div class="btn-group">
                    <button type="submit" class="btn btn-success">Create Patient</button>
                </div>
                <div class="btn-group">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    <!--/Modal add_patients-->
{% endblock %}